<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bT_main_A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="BUTTON A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt_main_loadTextA"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_main_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="BUTTON B"
        app:layout_constraintEnd_toEndOf="@+id/bT_main_A"
        app:layout_constraintHorizontal_bias="0.765"
        app:layout_constraintStart_toStartOf="@+id/bT_main_A"
        app:layout_constraintTop_toBottomOf="@+id/bT_main_A" />

    <Button
        android:id="@+id/bt_main_C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="BUTTON C"
        app:layout_constraintEnd_toEndOf="@+id/bt_main_B"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toStartOf="@+id/bt_main_B"
        app:layout_constraintTop_toBottomOf="@+id/bt_main_B" />

    <Button
        android:id="@+id/bt_main_D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="BUTTON D"
        app:layout_constraintEnd_toEndOf="@+id/bt_main_C"
        app:layout_constraintHorizontal_bias="0.783"
        app:layout_constraintStart_toStartOf="@+id/bt_main_C"
        app:layout_constraintTop_toBottomOf="@+id/bt_main_C" />

    <Button
        android:id="@+id/bt_main_loadTextA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOAD TEXT A"
        app:layout_constraintBottom_toBottomOf="@+id/bT_main_A"
        app:layout_constraintEnd_toStartOf="@+id/bT_main_A"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bT_main_A" />

    <Button
        android:id="@+id/bt_main_loadTextB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOAD TEXT B"
        app:layout_constraintEnd_toEndOf="@+id/bt_main_loadTextA"
        app:layout_constraintStart_toStartOf="@+id/bt_main_loadTextA"
        app:layout_constraintTop_toTopOf="@+id/bt_main_B" />

    <Button
        android:id="@+id/bt_main_loadTextC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOAD TEXT C"
        app:layout_constraintBottom_toBottomOf="@+id/bt_main_C"
        app:layout_constraintEnd_toEndOf="@+id/bt_main_loadTextB"
        app:layout_constraintStart_toStartOf="@+id/bt_main_loadTextB"
        app:layout_constraintTop_toTopOf="@+id/bt_main_C" />

    <Button
        android:id="@+id/bt_main_loadTextD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOAD TEXT D"
        app:layout_constraintBottom_toBottomOf="@+id/bt_main_D"
        app:layout_constraintEnd_toEndOf="@+id/bt_main_loadTextC"
        app:layout_constraintStart_toStartOf="@+id/bt_main_loadTextC"
        app:layout_constraintTop_toTopOf="@+id/bt_main_D" />

    <TextView
        android:id="@+id/tV_main_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_main_loadTextD" />
</androidx.constraintlayout.widget.ConstraintLayout>