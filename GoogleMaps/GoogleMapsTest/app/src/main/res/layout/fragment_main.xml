<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainFragment">

    <Button
        android:id="@+id/bT_stefan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Stefan"
        app:layout_constraintEnd_toStartOf="@+id/bT_mario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bT_selin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Selin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bT_mario"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bT_mario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Mario"
        app:layout_constraintEnd_toStartOf="@+id/bT_selin"
        app:layout_constraintStart_toEndOf="@+id/bT_stefan"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/bT_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:text="all"
        app:layout_constraintEnd_toEndOf="@+id/bT_mario"
        app:layout_constraintStart_toStartOf="@+id/bT_mario"
        app:layout_constraintTop_toBottomOf="@+id/bT_mario" />

    <fragment
        android:id="@+id/fragment3"
        android:name="com.example.googlemapstest.MapsFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bT_all" />
</androidx.constraintlayout.widget.ConstraintLayout>